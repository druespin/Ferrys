<resources>

    <!-- Base application theme. -->
    <style name="FerryAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
   </style>

   <style name="FerryLogoStyle">
       <item name="android:textColor">#1da</item>
       <item name="android:textSize">30sp</item>
       <item name="android:textStyle">bold</item>
   </style>

   <style name="SelectTextStyle">
       <item name="android:textColor">#fff</item>
       <item name="android:textSize">17sp</item>
   </style>

   <style name="SearchTextStyle">
       <item name="android:textColor">#51a</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textSize">20dp</item>
   </style>

   <style name="TimeStyle">
       <item name="android:textColor">#387</item>
       <item name="android:textSize">17sp</item>
       <item name="android:textStyle">bold</item>
   </style>

   <style name="PierStyle">
       <item name="android:textColor">#38d</item>
       <item name="android:textSize">17sp</item>
   </style>

   <style name="PriceStyle">
       <item name="android:textColor">#e45</item>
       <item name="android:textSize">20sp</item>
       <item name="android:textStyle">bold</item>
   </style>

   <style name="SearchButtonStyle">
       <item name="android:background">@drawable/search_btn</item>
       <item name="android:colorControlHighlight">@color/white</item>
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">@color/white</item>
       <item name="android:layout_gravity">center</item>
   </style>

   <style name="SpinnerStyle">
       <item name="android:background">@drawable/spinner</item>
       <item name="android:layout_gravity">center</item>
   </style>


</resources>
