<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle">
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#3F88A8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="FerryLogoStyle">
        <item name="android:textColor">#1da</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectTextStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:textColor">#51a</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TimeStyle">
        <item name="android:textColor">#387</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PierStyle">
        <item name="android:textColor">#38d</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="PriceStyle">
        <item name="android:textColor">#e45</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchButtonStyle">
        <item name="android:background">@drawable/search_btn</item>
        <item name="android:colorButtonNormal">#62b119</item>
        <item name="android:colorControlHighlight">#69e</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner</item>
    </style>

    <style name="Ferrys" parent="android:Theme.Holo.Light.NoActionBar" >
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_holo_light</item>
    </style>

</resources>
