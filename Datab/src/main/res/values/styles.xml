<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FerryLogoStyle">
        <item name="android:textColor">#1da</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectTextStyle">
        <item name="android:textColor">#65a</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TimeStyle">
        <item name="android:textColor">#d74</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PierStyle">
        <item name="android:textColor">#38d</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="PriceStyle">
        <item name="android:textColor">#abc</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Ferrys" parent="android:Theme.Holo.Light.NoActionBar" >
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_holo_light</item>
    </style>

</resources>
